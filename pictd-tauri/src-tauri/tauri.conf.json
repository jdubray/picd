{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pictd",
  "version": "0.1.0",
  "identifier": "com.pictd.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "pictd - Clipboard Image Saver",
        "width": 600,
        "height": 500,
        "resizable": true,
        "center": true,
        "visible": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
